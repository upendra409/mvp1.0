FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    cmake \
    python3 \
    python3-pip \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Clone and build llama.cpp with CMake (and disable CURL)
WORKDIR /app
RUN git clone https://github.com/ggerganov/llama.cpp.git
WORKDIR /app/llama.cpp
RUN mkdir build && cd build && cmake -DLLAMA_CURL=OFF .. && cmake --build . --config Release

# Install Python requirements
RUN pip3 install torch numpy sentencepiece huggingface_hub transformers

# Download the TinyLlama model from Hugging Face
RUN mkdir -p models
WORKDIR /app/llama.cpp
RUN python3 -m pip install -r requirements.txt
RUN python3 -c "from huggingface_hub import snapshot_download; snapshot_download(repo_id='TinyLlama/TinyLlama-1.1B-Chat-v1.0', local_dir='./TinyLlama-1.1B-Chat-v1.0')"

# Now convert the downloaded model
RUN python3 ./convert_hf_to_gguf.py ./TinyLlama-1.1B-Chat-v1.0 \
    --outfile models/tinyllama-1.1b-chat.gguf

# Create simple server script
RUN echo '#!/bin/bash\n\
./build/bin/server -m models/tinyllama-1.1b-chat.gguf --host 0.0.0.0 --port 8080 -c 2048 -ngl 0\n\
' > start-server.sh && chmod +x start-server.sh

EXPOSE 8080

CMD ["./start-server.sh"]
