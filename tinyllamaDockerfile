FROM ubuntu:22.04

# Install dependencies
RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    cmake \
    python3 \
    python3-pip \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Clone and build llama.cpp with CMake (and disable CURL)
WORKDIR /app
RUN git clone https://github.com/ggerganov/llama.cpp.git
WORKDIR /app/llama.cpp
RUN mkdir build && cd build && cmake -DLLAMA_CURL=OFF .. && cmake --build . --config Release

# Install Python requirements
RUN pip3 install torch numpy sentencepiece

# Download and convert TinyLlama model
RUN mkdir -p models
WORKDIR /app/llama.cpp
RUN python3 -m pip install -r requirements.txt

# Use the correct path for the conversion script
RUN python3 -c "from glob import glob; print('Available conversion scripts:', glob('*.py') + glob('*/*.py'))" || true
RUN ls -la
# Try to find the conversion script in the repository
RUN find . -name "convert_*_to_gguf.py" -o -name "*convert*.py" | grep -i hf || echo "No conversion script found"

# Use the correct conversion script path (adjust as needed based on the find results)
RUN python3 convert.py --outtype f16 --outfile models/tinyllama-1.1b-chat.gguf TinyLlama/TinyLlama-1.1B-Chat-v1.0

# Create simple server script
RUN echo '#!/bin/bash\n\
./build/bin/server -m models/tinyllama-1.1b-chat.gguf --host 0.0.0.0 --port 8080 -c 2048 -ngl 0\n\
' > start-server.sh && chmod +x start-server.sh

EXPOSE 8080

CMD ["./start-server.sh"]
